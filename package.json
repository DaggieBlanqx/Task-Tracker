    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "snazzy": "^9.0.0",
    "standard": "^17.1.2",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.1"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8"
  }
}
